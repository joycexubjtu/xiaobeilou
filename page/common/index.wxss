.box {
  display: flex;
}

.box-lr {
  flex-direction: row;
}

.box-rl {
  flex-direction: row-reverse;
}

.box-tb {
  flex-direction: column;
}

.box-bt {
  flex-direction: column-reverse;
}

.box-pack-center {
  justify-content: center;
}

.box-pack-start {
  justify-content: flex-start;
}

.box-pack-end {
  justify-content: flex-end;
}

.box-pack-between {
  justify-content: space-between;
}

.box-pack-around {
  justify-content: space-around;
}

.box-align-center {
  align-items: center;
}

.box-align-start {
  align-items: flex-start;
}

.box-align-end {
  align-items: flex-end;
}

.self-align-center {
  align-self: center;
  margin: 0 auto;
}

.self-align-start {
  align-self: flex-start;
}

.self-align-end {
  align-self: flex-end;
}

.self-align-stretch {
  align-self: stretch;
}

.box-wrap {
  flex-wrap: wrap;
}

.box-nowrap {
  flex-wrap: nowrap;
}

.flex {
  flex-grow: 1;
}

.shrink {
  flex-shrink: 1;
}

.bg {
  background-image: linear-gradient(to bottom, #faefe7, #ffcbd7);
  overflow: hidden;
}

.brown-color {
  color: #784344;
}

.pink-color {
  color: #ff629a;
}

.white-color {
  color: #fff;
}

.gray-color {
  color: #888;
}

.fs24 {
  font-size: 24rpx;
}

.fs26 {
  font-size: 26rpx;
}

.fs28 {
  font-size: 28rpx;
}

.fs32 {
  font-size: 32rpx;
}

.fs36 {
  font-size: 36rpx;
}
.fs42 {
  font-size: 42rpx;
}

.fs50 {
  font-size: 50rpx;
}

.contbox {
  height: 120rpx;
  border-bottom: 10rpx solid #eee;
}

.contcbox {
  height: 100%;
}

.contcbox>text {
  text-align: center;
}

.border-radius {
  border-radius: 50%;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
}

.recite-list-item {
  position:relative;
  margin:0 auto;
}
.recite-list-item-desc{
  position:absolute;
  bottom:48px;
  right:40px;
}
.recite-list-item-img{
  margin: 0 auto;
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.historybox{
  margin-top:10rpx;
  background-color:#fafafa;
}
.historytitle{
  height:65rpx;
  padding-left:20rpx;
  text-align:left;
  border-top:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
}
.tab{
  width:375rpx;
  height:60rpx;
  border-bottom:1px solid #efeff4;
  text-align:center;
}
.tab.current{
  border-bottom:1px solid #fed547;
}
.history-list{
  position:relative;
  padding-left:50rpx;
  color:#353535;
}
.sidebar{
  position:absolute;
  top:20rpx;
  left:60rpx;
  width:0rpx;
  height:100%;
  border-left:2rpx solid #b2b2b2;
}
.day-icon{
  width:20rpx;
  height:20rpx;
  border-radius: 10rpx;
  background-color:#fed547;
  z-index:1;
}
.day-desc{
  padding-left:40rpx;
}
.daydetail{
  padding-left:50rpx;
}
.daydetail .time{
  width:66rpx;
  padding-right:20rpx;
}
.daydetail .target_type{
  padding-right:20rpx;
}
.daydetail .target_title{
  padding-right:16rpx;
  color:#fed547;
}
.result.failed{
  width:20rpx;
  height:20rpx;
  border-radius: 10rpx;
  background-color:red;
}
.timedetail{
  margin-top:10rpx;
}
.c_b{
  position: fixed;
  bottom:0;
  height: 135rpx;
  margin:auto;
  background: #fff;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  box-shadow: 0 0 30px 0  rgba(4,3,6,.3);
  z-index:4;
}
.c_b_b{
  position:relative;
  width:750rpx;
  height:135rpx;
}
.c_b_t{
  position: absolute;
  bottom:0rpx;
  left:50%;
  width: 100rpx;
  height: 185rpx;
  margin-left: -50rpx;
  z-index: 20;
}
.c_b_t>text{
  display: block;
  width: 100rpx;
  height: 80rpx;
  font-size: 20rpx;
  line-height: 80rpx;
  text-align: center;
  color: #353535;
  font-weight: 600;
}
.c_b_t>image{
  display: block;
  width:100rpx;
  height:100rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 30px 0  rgba(4,3,6,.3);
}
.c_l_bg{
  position:fixed;
  top:0;
  width:750rpx;
  height:100%;
  background:#000;
  opacity:0.6;
  z-index:2;
}
.c_l{
  position:fixed;
  left:19rpx;
  top:108rpx;
  width:712rpx;
  height:882rpx;
  z-index:4;
  background:#fff;
  border-radius:30rpx;
}