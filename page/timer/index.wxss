@import "../common/index.wxss";
.task-box{
  width:720rpx;
  margin:20rpx auto;
  border-radius:15rpx;
  background-color:#fed547;
}
.task{
  width:240rpx;
  height:240rpx;
  color:#333;
  text-align:center;
}
.task>text{
  font-size:36rpx;
  line-height:240rpx;
}
.b-rb{
  border-right:1px solid #fff;
  border-bottom:1px solid #fff;
}
.b-b{
  border-bottom:1px solid #fff;
}
.b-r{
  border-right:1px solid #fff;
}
.c_b{
  z-index:1;
}
.t_box{
  position:relative;
  width:700rpx;
  margin:0 auto;
}
.t_box_bg{
  position:absolute;
  top:200rpx;
  left:47rpx;
}
.t_box_bg>image{
  width:606rpx;
  height:432rpx;
}
.t_time{
  position:absolute;
  width:350rpx;
  height:150rpx;
  top:380rpx;
  left:180rpx;
  line-height:100rpx;
  font-size:60rpx;
  text-align:center;
}
.t_mouth{
  position:absolute;
  top:520rpx;
  left:260rpx;
}
.t_box_btn{
  position:absolute;
  width:150rpx;
  height:150rpx;
  line-height:150rpx;
  background-color:#f2f2f2;
  border-radius:150rpx;
  text-align:center;
}
.t_box_btn.active{
  background-color:#fed547;
}
.t_box_start{
  top:150rpx;
  left:275rpx;
}
.t_box_end{
  top:350rpx;
  left:30rpx;
}
.t_box_finish{
  top:350rpx;
  right:20rpx;
}
.t_tips{
  position:absolute;
  top:720rpx;
  width:580rpx;
  text-align:center;
  color:#333;
  padding: 0 60rpx;
}
